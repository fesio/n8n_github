# n8n API Configuration
# Get your API key from: n8n dashboard → Account Settings → API Tokens

# n8n Cloud: Use your instance URL from n8n.cloud
# n8n Self-hosted: Use your server URL (e.g., http://localhost:5678)
N8N_BASE_URL=http://localhost:5678

# Generate API key in n8n dashboard → Account Settings → API Tokens
# Required for API authentication
N8N_API_KEY=your_api_key_here

# API version (default: v1)
N8N_API_VERSION=v1

# Request timeout in seconds (default: 30)
N8N_TIMEOUT=30

# SSL verification (set to 'false' for self-signed certificates)
N8N_VERIFY_SSL=true

# Execution polling settings
N8N_MAX_WAIT_SECONDS=300
N8N_POLL_INTERVAL=2
